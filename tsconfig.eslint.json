{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // ESLint needs to type-check all files it lints
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "*.config.ts",
    "*.config.js",
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "playwright-report",
    "test-results"
  ]
}

